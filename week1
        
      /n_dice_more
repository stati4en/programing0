from random import randint
n = input("how much sides does the dice have? ")
dice = randint(1, int(n))
dice1 = randint(1,int(n))
dice2 = randint(1,int(n))
print("I have thrown the dice of destiny. Here is the result")
print(dice)
print("I have thrown the dice second time")
print(dice1)
print("I have thrown third time the dice")
print(dice2)

print("sum is: ")
print(dice + dice1 + dice2)
